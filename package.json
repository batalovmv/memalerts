{
  "name": "memalerts",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:contracts": "cd packages/api-contracts && npm run build",
    "lint": "turbo lint",
    "pretest": "npm run build:contracts",
    "test": "turbo test",
    "dev:backend": "pnpm --filter @memalerts/backend dev",
    "dev:frontend": "pnpm --filter @memalerts/frontend dev",
    "build:backend": "pnpm --filter @memalerts/backend build",
    "build:frontend": "pnpm --filter @memalerts/frontend build"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp"
    ],
    "overrides": {
      "esbuild": "^0.25.0",
      "ioredis": "5.9.2",
      "qs": "^6.14.1"
    }
  }
}
