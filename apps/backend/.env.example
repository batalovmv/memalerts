# Minimal local development env (see ENV.example for the full list).

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/memalerts?schema=public

# Cache (optional but recommended)
REDIS_URL=redis://localhost:6379

# Server
PORT=3001
NODE_ENV=development

# CORS
WEB_URL=http://localhost:5173
OVERLAY_URL=http://localhost:5173

# Auth
JWT_SECRET=change-me-please-1234
JWT_EXPIRES_IN=7d

# Twitch OAuth (required for env validation; dummy values are OK locally if you do not use Twitch auth)
TWITCH_CLIENT_ID=local-dev
TWITCH_CLIENT_SECRET=local-dev
TWITCH_EVENTSUB_SECRET=local-dev
TWITCH_CALLBACK_URL=http://localhost:3001/auth/twitch/callback

# Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
